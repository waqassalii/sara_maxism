<odoo>
    <data>

        <template id="purchase_order_reports_document_ext">
            <t t-call="web.html_container">
                <t t-set="data_report_margin_top" t-value="112"/>
                <t t-set="data_report_header_spacing" t-value="107"/>
                <t t-call="web.basic_layout">
                    <t t-foreach="docs" t-as="doc">
                        <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>

                        <div class="page" style="font-size: 14px;line-height: 1.3;">
                            <style type="text/css">
                                table {
                                border-collapse: collapse;
                                width: 100%;
                                }
                                th {
                                border: 1px solid black;
                                border-top: 1px solid black !important;
                                }
                                td {
                                border-top: 1px solid black !important;
                                }
                                thead {
                                background-color: #d3d3d3;
                                }
                                .main_border {
                                border-top: 1px solid black !important;
                                }
                                .table th, .table td {
                                border-top: 1px solid black !important;
                            </style>

                            <div class="header">
                                <div class="row">

                                    <img t-if="doc.company_id.logo_sale"
                                         t-att-src="image_data_uri(doc.company_id.logo_sale)"
                                         alt="Logo" height="115"/>
                                </div>
                                <br/>

                                <div class="row" t-att-style="report_header_style">
                                    <div class="col-5" style="font-size: 14px;line-height: 1.3;">
                                        <table class="table table-sm">
                                            <tr>
                                                <thead class="main_border"
                                                       style="border: 1px solid black;background-color: lightgray;">
                                                    <th name="th_to" style="border-top: 1px solid black !important;">
                                                        <strong>Quotation To</strong>
                                                    </th>
                                                </thead>
                                                   <td style="border-top: 1px solid black !important;">
                                                       <span t-field="doc.partner_id.parent_id.name"/>
                                                       <br/><span t-field="doc.partner_id.parent_id.street"/>&#160;<span t-field="doc.partner_id.parent_id.city"/>
                                                       <t t-if="doc.partner_id.parent_id.zip">,&#160;<span t-field="doc.partner_id.parent_id.zip"/></t>,&#160;<span t-field="doc.partner_id.parent_id.country_id.name"/>
                                                </td>
<!--                                                <td style="border-top: 1px solid black !important;">-->
<!--                                                    <span t-field="doc.partner_id.parent_id"-->
<!--                                                          t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;,], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>-->
<!--                                                </td>-->
                                            </tr>
                                        </table>
                                    </div>

                                    <div class="col-5" style="font-size: 14px;line-height: 1.3;">
                                        <table class="table table-sm ">
                                            <tr>
                                                <thead class="main_border"
                                                       style="border: 1px solid black;background-color: lightgray;">
                                                    <th name="th_to" style="border-top: 1px solid black !important;">
                                                        <strong>Contact Details</strong>
                                                    </th>
                                                </thead>
                                                <td style="border-top: 1px solid black !important;">
                                                   <t t-if="doc.partner_id.title">
                                                      <span t-field="doc.partner_id.title.shortcut"/>
                                                    </t>
                                                    <span t-field="doc.partner_id.name"/><br/><span t-field="doc.partner_id.function"/>
                                                    <br/>
                                                    Tel:
                                                    <span t-field="doc.partner_id.phone"/>
                                                    <br/>
                                                    Email:
                                                    <span t-field="doc.partner_id.email"/>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="col-2" style="float: right; text-align: right;">
                                        <ul
                                                class="list-inline pagenumber">
                                            <li class="list-inline-item">
                                                <p>
                                                    Page:
                                                    <span class="page"/>
                                                    of
                                                    <span class="topage"/>
                                                </p>
                                            </li>
                                        </ul>
                                    </div>
                                    <!--                                    <div class="col-3 mb4">-->
                                    <!--                                        <img t-if="doc.company_id.logo" t-att-src="image_data_uri(doc.company_id.logo)"-->
                                    <!--                                             style="max-height: 45px;" alt="Logo"/>-->
                                </div>
                                <!--                                <p style="page-break-before:always">-->
                                <div class="row">
                                    <div class="col-9" style="font-size: 14px;line-height: 1.3;">
                                        <br/>

                                        <h2 class="mt16">
                                            <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                                                <span t-if="doc.state not in ['draft','sent']">Order #</span>
                                                <span t-if="doc.state in ['draft','sent']">Quotation #</span>
                                            </t>
                                            <t t-if="env.context.get('proforma', False) or is_pro_forma">
                                                <span>Pro-Forma Invoice #</span>
                                            </t>
                                            <span t-field="doc.name"/>
                                        </h2>
                                    </div>
                                    <div class="col-3" style="font-size: 14px;line-height: 1.5;">
                                        <strong>NTN :</strong>
                                        <span t-field="doc.company_id.vat"/>
                                        <br/>
                                        <strong>STRN :</strong>
                                        <span t-field="doc.company_id.company_strn"/>
                                        <br/>
                                        <strong>DRAP LIC :</strong>
                                        <span>ELI-0052</span>
                                        <br/>
                                        <strong>QF Code :</strong>
                                        <!--                                    <span>QF-19 Rev.00</span>-->
                                        <span t-field="doc.company_id.sale_qf_code"/>
                                    </div>
                                </div>
                                <!-- Is there a discount on at least one line? -->
                                <t t-set="display_discount" t-value="any(l.discount for l in doc.order_line)"/>
                                <!--  TABLE-1   -->
                                <table class="table table-sm" style="margin-bottom:0;font-size:14px;line-height: 1.3;table-layout: fixed;">
                                    <thead class="main_border"
                                           style="border: 1px solid black;background-color: lightgray;width:100%">
                                        <tr>
                                            <th name="th_ref" class="text-center"
                                                style="border-top: 1px solid black;border-right: 1px solid black;">
                                                <b>Your Ref.</b>
                                            </th>
                                            <th name="th_tref" class="text-center"
                                                style="border-top: 1px solid black;border-right: 1px solid black;">
                                                <b>End User</b>
                                            </th>
                                            <th name="th_po" class="text-center"
                                                style="border-top: 1px solid black;border-right: 1px solid black;">
                                                <b>Quotation Date</b>
                                            </th>
                                            <th name="th_shipping_date" class="text-center"
                                                style="border-top: 1px solid black;border-right: 1px solid black;">
                                                <b>Validity Date</b>
                                            </th>
                                            <th name="th_payment" class="text-center"
                                                style="border-top: 1px solid black;border-right: 1px solid black;">
                                                <b>Payment Terms</b>
                                            </th>
                                        </tr>
                                    </thead>

                                    <tbody style="text-align: center;width:100%">
                                        <t t-foreach="docs" t-as="doc">
                                            <tr>
                                                <td style="border-top: 1px solid black;">
                                                    <t t-esc="doc.client_order_ref"/>
                                                </td>
                                                <td style="border-top: 1px solid black;">
                                                    <t t-esc="doc.end_user.name"/>
                                                </td>
                                                <td style="border-top: 1px solid black;">
                                                    <t t-esc="doc.date_order.strftime('%d-%b-%Y')"/>
                                                    <!--                                                    <br/>-->
                                                    <!--                                                    <span t-esc="datetime.datetime.now().strftime('%d-%m-%Y  %l:%M')"/>-->
                                                    <!--                                                                                <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %l:%M')"/>-->

                                                </td>
                                                <td class="text-center" style="border-top: 1px solid black;">
                                                    <t t-if="doc.validity_date">
                                                        <t t-esc="doc.validity_date.strftime('%d-%b-%Y')"/>
                                                    </t>
                                                    <!--                                                <span t-esc="doc.validity_date.strftime('%d-%b-%Y')"/>-->
                                                </td>
                                                <td class="text-center" style="border-top: 1px solid black;">
                                                    <span t-field="doc.payment_term_id"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                                <!--  TABLE-2   -->
                                <table class="table table-sm o_main_table" style="margin-bottom:0;font-size:14px;line-height: 1.3;table-layout: fixed;">
                                    <thead style="border: 1px solid black;background-color: lightgray;">
                                        <tr>
                                            <th name="th_vendor" class="text-center"
                                                style="border-top: 1px solid black;border-right: 1px solid black;">
                                                <strong>Manufacturer</strong>
                                            </th>
                                            <th name="th_vtel" class="text-center"
                                                style="border-top: 1px solid black;border-right: 1px solid black;">
                                                <strong>Delivery</strong>
                                            </th>
                                            <th name="th_email" class="text-center"
                                                style="border-top: 1px solid black;border-right: 1px solid black;">
                                                <strong>Delivery Terms</strong>
                                            </th>
                                            <th name="th_currency" class="text-center"
                                                style="border-top: 1px solid black;border-right: 1px solid black;">
                                                <strong>Currency</strong>
                                            </th>
                                            <th name="th_incoterms" class="text-center"
                                                style="border-top: 1px solid black;border-right: 1px solid black;">
                                                <strong>Sales Rep.</strong>
                                            </th>
                                        </tr>
                                    </thead>

                                    <tbody style="text-align: center;">
                                        <t t-foreach="docs" t-as="doc">
                                            <tr>
                                                <td style="border-top: 1px solid black;">
                                                    <span t-esc="doc.manufacturer"/>
                                                </td>
                                                <td style="border-top: 1px solid black;">
                                                    <span t-esc="doc.delivery"/>
                                                </td>
                                                <td style="border-top: 1px solid black;">
                                                    <span t-esc="doc.delivery_term.code"/>
                                                </td>

                                                <td class="text-center" style="border-top: 1px solid black;">
                                                    <span t-field="doc.currency_id"/>
                                                </td>
                                                <td class="text-center" style="border-top: 1px solid black;">
                                                    <span t-field="doc.user_id"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                                <!--                                </p>-->


                            </div>


                            <div class="oe_structure"/>


                            <!-- Table-3 -->
                            <t t-set="total_qty" t-value="0"/>
                            <table class="table table-sm o_main_table" style="font-size: 14px;">
                                <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                                <thead class="main_border">
                                    <tr>
                                        <th name="th_sn" class="text-center">
                                            <strong>S/N</strong>
                                        </th>
                                        <th name="th_code" class="text-center" style="width: 10%;">
                                            <strong>Code</strong>
                                        </th>
                                        <th name="th_description" class="text-left">
                                            <strong>Description</strong>
                                        </th>
                                        <th name="th_sm_origin" class="text-center">
                                            <strong>Origin</strong>
                                        </th>
                                        <th name="th_quantity" class="text-center">
                                            <strong>Qty</strong>
                                        </th>
                                        <th style="width: 11%;" name="th_priceunit" class="text-center">
                                            <strong>Unit Price</strong>
                                        </th>
                                        <th style="width: 11%;" name="th_subtotal" class="text-center">
                                            <strong>Total Price</strong>
                                        </th>
                                        <th name="th_discount" t-if="display_discount" class="text-center"
                                            groups="product.group_discount_per_so_line">
                                            <span>Disc.%</span>
                                        </th>
                                        <th style="width: 6%;" name="th_taxes" class="text-center">
                                            <strong>GST %</strong>

                                        </th>
                                        <th name="th_taxes" style="width: 10%;" class="text-center">
                                            <strong>GST</strong>

                                        </th>
                                        <th style="width: 11%;" name="th_subtotal" class="text-center">
                                            <strong>Total</strong>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody class="sale_tbody">

                                    <t t-set="current_subtotal" t-value="0"/>

                                    <t t-foreach="doc.order_line" t-as="line">

                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                                           groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                                           groups="account.group_show_line_subtotals_tax_included"/>

                                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                            <t t-if="not line.display_type">

                                                <td class="text-center">
                                                    <span t-esc="line_index+1"/>
                                                </td>
                                                <td class="text-center">
                                                    <span t-esc="line.product_id.default_code"/>
                                                </td>

                                                <td name="td_name">
                                                    <span t-field="line.name"/>
                                                </td>
                                                <td class="text-center" name="td_origin">
                                                    <span t-field="line.product_id.country_origin.code"/>
                                                </td>
                                                <td name="td_quantity" class="text-center">
                                                    <span t-esc="'%.0f'% line.product_uom_qty"/>
                                                    <t t-set="total_qty" t-value="total_qty+line.product_uom_qty"/>
                                                    <!--                                                    <span t-field="line.product_uom"/>-->
                                                </td>
                                                <td name="td_priceunit" class="text-right">
                                                    <span t-field="line.price_unit"/>
                                                </td>
                                                <td name="td_suntotal" class="text-right">
                                                    <span t-field="line.price_subtotal"
                                                          t-options='{"widget": "float", "precision": 2}'/>
                                                </td>
                                                <td t-if="display_discount" class="text-right"
                                                    groups="product.group_discount_per_so_line">
                                                    <span t-field="line.discount"/>
                                                </td>

                                                <td name="td_taxes" class="text-right">
                                                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>
                                                </td>
                                                <td class="text-right"
                                                    groups="product.group_discount_per_so_line">
                                                    <span t-esc="(line.price_total- line.price_subtotal)"
                                                          t-options='{"widget": "float", "precision": 2}'/>
                                                </td>
                                                <td name="td_subtotal" class="text-right o_price_total">
                                                    <span t-field="line.price_total"
                                                          t-options='{"widget": "float", "precision": 2}'/>
                                                </td>
                                            </t>
                                            <t t-if="line.display_type == 'line_section'">
                                                <td name="td_section_line" colspan="99">
                                                    <span t-field="line.name"/>
                                                </td>
                                                <t t-set="current_section" t-value="line"/>
                                                <t t-set="current_subtotal" t-value="0"/>
                                            </t>
                                            <t t-if="line.display_type == 'line_note'">
                                                <td name="td_note_line" colspan="99">
                                                    <span t-field="line.name"/>
                                                </td>
                                            </t>
                                        </tr>

                                        <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                                            <tr class="is-subtotal text-right">
                                                <td name="td_section_subtotal" colspan="99">
                                                    <strong class="mr16">Subtotal</strong>
                                                    <span t-esc="current_subtotal"
                                                          t-options="{&quot;widget&quot;: &quot;False&quot;}"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </t>

                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td style="font-weight: bold;page-break-inside: always;" class="text-center">
                                            <div style="margin-left: -30px;">
                                                Qty:
                                                <span style="border-bottom: 1px solid black !important;"
                                                      t-esc="'%.0f'% total_qty"/>
                                            </div>

                                        </td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <t t-if="display_discount">
                                            <td></td>

                                        </t>
                                        <td></td>
                                        <td></td>
                                    </tr>

                                </tbody>
                                <!--                                <tfoot>-->
                                <!--                                    <tr>-->
                                <!--                                        <td style="font-weight: bold;" class="text-right" colspan="5">-->
                                <!--                                            Total Qty:-->
                                <!--                                            <span t-esc="'%.0f'% total_qty"/>-->
                                <!--                                        </td>-->
                                <!--                                        <td colspan="7">-->

                                <!--                                        </td>-->
                                <!--                                    </tr>-->
                                <!--                                </tfoot>-->
                            </table>

                            <div class="clearfix" name="so_total_summary" style="line-height: 1.5;">
                                <div id="total" class="row" name="total">
                                    <div class="col-7">
                                        <table class="table table-sm">
                                            <tr>
                                                <thead class="main_border">
                                                    <th name="th_to">
                                                        <strong>Terms &amp; Conditions</strong>
                                                    </th>
                                                </thead>
                                                <td style="border: 1px solid black;">
                                                    <p t-field="doc.note"/>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                    <!--                                    <div class="col-2">-->
                                    <!--                                    </div>-->
                                    <div class="col-5" style="line-height: 1.0;">
                                        <table class="table table-sm">
                                            <tr class="o_subtotal" style="">
                                                <td class="text-right" style="border-top: 1px solid white !important"
                                                    name="td_amount_untaxed_label">
                                                    <strong style="font-weight: 400;">Total Without GST:</strong>
                                                </td>
                                                <td name="td_amount_untaxed" class="text-right"
                                                    style="border-top: 1px solid white !important">
                                                    <span t-field="doc.amount_untaxed"
                                                          t-options='{"widget": "float", "precision": 2}'/>
                                                </td>
                                            </tr>
                                            <t t-if="doc.amount_by_group">
                                                <t t-foreach="doc.amount_by_group" t-as="amount_by_group">
                                                    <tr style="">
                                                        <t t-if="amount_by_group[5] == 1 and doc.amount_untaxed == amount_by_group[2]">
                                                            <!--                                                    <td name="td_amount_by_group_label_3">-->
                                                            <!--                                                        <span t-esc="amount_by_group[0]"/>-->
                                                            <!--                                                        <span>&amp;nbsp;<span>on</span>&amp;nbsp;-->
                                                            <!--                                                            <t t-esc="amount_by_group[2]"-->
                                                            <!--                                                               t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>-->
                                                            <!--                                                        </span>-->
                                                            <!--                                                    </td>-->
                                                            <td class="text-right"
                                                                style="border-top: 1px solid white !important">
                                                                <strong style="font-weight: 400;">GST:</strong>
                                                            </td>
                                                            <td style="border-top: 1px solid white !important"
                                                                name="td_amount_by_group_3"
                                                                class="text-right o_price_total">
                                                                <span t-esc="amount_by_group[1]"
                                                                      t-options='{"widget": "float", "precision": 2}'/>
                                                            </td>
                                                        </t>
                                                        <t t-else="">
                                                            <td class="text-right"
                                                                style="border-top: 1px solid white !important">
                                                                <strong style="font-weight: 400;">GST:</strong>
                                                            </td>
                                                            <td style="border-top: 1px solid white !important"
                                                                name="td_amount_by_group"
                                                                class="text-right o_price_total">
                                                                <span t-esc="amount_by_group[1]"
                                                                      t-options='{"widget": "float", "precision": 2}'/>
                                                            </td>
                                                        </t>
                                                    </tr>
                                                </t>

                                            </t>
                                            <t t-else="">
                                                <td class="text-right"
                                                    style="border-top: 1px solid white !important">
                                                    <strong style="font-weight: 400;">GST:</strong>
                                                </td>
                                                <td style="border-top: 1px solid white !important"
                                                    class="text-right o_price_total">
                                                    <span class="text-nowrap">0.00</span>
                                                </td>
                                            </t>


                                            <tr class="o_total">
                                                <td class="text-right" style="border-top: 1px solid white !important">
                                                    <strong style="font-weight: 400;">Total including GST</strong>
                                                </td>
                                                <td style="border-top: 1px solid white !important" class="text-right">
                                                    <span class="text-nowrap" t-field="doc.amount_total"
                                                          t-options='{"widget": "float", "precision": 2}'/>
                                                </td>
                                            </tr>
                                            <tr t-if="doc.discount" class="o_total">
                                                <td class="text-right" style="border-top: 1px solid white !important">
                                                    <strong style="font-weight: 400;">Discount</strong>
                                                </td>
                                                <td style="border-top: 1px solid white !important" class="text-right">
                                                    <span class="text-nowrap" t-field="doc.discount"
                                                          t-options='{"widget": "float", "precision": 2}'/>
                                                </td>
                                            </tr>
                                            <tr class="o_total">
                                                <td class="text-right" style="border-top: 1px solid white !important">
                                                    <strong style="font-weight: 400;">Shipping &amp; Handling Charges:
                                                    </strong>
                                                </td>
                                                <td style="border-top: 1px solid white !important" class="text-right">
                                                    <span class="text-nowrap" t-field="doc.shipping_cost"
                                                          t-options='{"widget": "float", "precision": 2}'/>
                                                    <!--                                                <span class="text-nowrap" t-field="doc."-->
                                                    <!--                                                      t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>-->
                                                </td>
                                            </tr>
                                            <tr class="o_total">
                                                <td class="text-right" style="border-top: 1px solid white !important;"
                                                    name="td_amount_total_label">
                                                    <strong>Net Total:</strong>
                                                </td>
                                                <td style="border-bottom: 1px solid black !important;"
                                                    name="td_amount_total" class="text-right">
                                                    <span t-field="doc.net_total"
                                                          t-options='{"widget": "float", "precision": 2}'/>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>

                            <div t-if="doc.signature" class="mt32 ml64 mr4" name="signature">
                                <div class="offset-8">
                                    <strong>Signature</strong>
                                </div>
                                <div class="offset-8">
                                    <img t-att-src="image_data_uri(doc.signature)"
                                         style="max-height: 4cm; max-width: 8cm;"/>
                                </div>
                                <div class="offset-8 text-center">
                                    <p t-field="doc.signed_by"/>
                                </div>
                            </div>

                            <div class="oe_structure"/>
                        </div>
                    </t>

                </t>
            </t>
        </template>


        <report
                id="sale_orders_Report_ext"
                model="sale.order"
                string="Sale Report"
                report_type="qweb-pdf"
                name="purchase_delivery_reports.purchase_order_reports_document_ext"
                file="purchase_delivery_reports.purchase_order_reports_document_ext"
                menu="True"
        />


    </data>
</odoo>



